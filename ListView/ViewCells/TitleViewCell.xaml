<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="ListView.ViewCells.TitleViewCell">

    <VerticalStackLayout>
        <Label Text="{Binding Title}" Padding="20,4,0,0" FontAttributes="Bold" />
        <BoxView Color="LightGray" HeightRequest="0.5" Margin="16,0,0,0"/>
    </VerticalStackLayout>
</ViewCell>
